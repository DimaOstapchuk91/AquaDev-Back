        "operationId": "updateWaterPortion",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the water entry to update",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
