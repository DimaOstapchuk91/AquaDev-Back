                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully updated an entry!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "userWater": {
